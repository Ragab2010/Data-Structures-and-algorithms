#include <stdio.h>

void BubleSort(int *pa , int n){
	int i, j , flage=1;
	int temp=0;
	for(i=n-1 ; (i>=0 )&&(flage) ; i--){
		flage=0;
		for(j=0; j<i-1 ; j++){
			if(pa[j] < pa[j+1]){
				/***swap***/
				temp=pa[j];
				pa[j]=pa[j+1];
				pa[j+1]=temp;
				flage=1;
			}
		}
	}

}

void SelectionSort(int *pa, int n){
	unsigned int i , j ,min ;
	int temp=0;
	for(i =0 ; i<n ; i++){
		min =i;
		for(j=i+1 ; j<n ; j++){
			if(pa[i] < pa[min]){
				min =i;
			}
		}
		/***swap***/
		temp=pa[min];
		pa[min]=pa[i];
		pa[i]=temp;

	}

}

int main(){
	int a[10]={9,2,4,6,8,7,1,2,3,58};
	BubleSort(&a , 10);
